{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Fiche Contact{% endblock %}

{% block body %}
    <section>
        <div class="container px-4 py-5 my-5">
            <h1 class="text-center">Fiche Contact</h1>
            <p class="text-center">N'hésitez pas à prendre contact avec notre entreprise, nous vous répondrons dans les meilleurs délais.</p>
            <hr class="featurette-divider">
            <div class="row">
                {# Map google with iframe #}
                <div class="col-md-6">
                <div class="mapouter">
                        <div class="gmap_canvas">
                            <iframe width="500" height="430" id="gmap_canvas" src="https://maps.google.com/maps?q=677%20avenue%20de%20la%20R%C3%A9publique,%2059800%20Lille&t=&z=9&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                            <a href="https://123movies-to.org"></a><br><style>.mapouter{position:relative;text-align:right;height:430px;width:500px;}</style>
                            <a href="https://www.embedgooglemap.net">add a google map to website</a>
                            <style>.gmap_canvas {overflow:hidden;background:none!important;height:430px;width:500px;}</style>
                        </div>
                    </div>
                </div>
                {# Contact form #}
                <div class="col-md-6">
                    {{ form_start(form) }}
                        <div class ="row">
                            {# render a field row #}
                            <div class="col-md-6">{{ form_row(form.name) }}</div>
                            <div class="col-md-6">{{ form_row(form.firstname) }}</div>
                        </div>
                        <div class="col-md-12">{{ form_row(form.email) }}</div>
                        <div class="col-md-12">{{ form_row(form.department) }}</div>
                        <div class="col-md-12">{{ form_row(form.message) }}</div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Envoyer</button>
                        </div>
                    {{ form_end(form) }}
                </div>
                {# End Contact form #}
            </div>
        </div>
    </section>
{% endblock %}
